<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FreecellApp.Views.BoardPage"
             Title="{Binding Title}"
             xmlns:local="clr-namespace:FreecellApp.ViewModels"  
             xmlns:model="clr-namespace:FreecellLib;assembly=FreecellLib"  
             x:Name="BrowseItemsPage">
    
    <ContentPage.Content>
        <Grid Padding="1" Margin="1" x:Name="BoardPageGrid">
            <Frame x:Name="FoundationStackFrame" Grid.Row="0" Padding="1" Margin="1" />
            <Frame x:Name="CascadeStackFrame" Grid.Row="1" Padding="1" Margin="1" />
            <Frame x:Name="FreecellStackFrame" Grid.Row="2" Padding="1" Margin="1" />
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
        </Grid>
    </ContentPage.Content>
</ContentPage>