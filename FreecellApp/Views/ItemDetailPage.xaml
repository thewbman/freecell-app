<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FreecellApp.Views.ItemDetailPage"
             Title="{Binding ItemId}">

    <StackLayout Spacing="20" Padding="15">
        <Label Text="ID:" FontSize="Medium" />
        <Label Text="{Binding ID}" FontSize="Small"/>
        <Label Text="Text:" FontSize="Medium" />
        <Label Text="{Binding Text}" FontSize="Small"/>
        <Label Text="Description:" FontSize="Medium" />
        <Label Text="{Binding Description}" FontSize="Small"/>
        <Label Text="Parent Cards:" FontSize="Medium" />
        <Label Text="{Binding Parents}" FontSize="Small"/>
        <Label Text="Child Cards:" FontSize="Medium" />
        <Label Text="{Binding Children}" FontSize="Small"/>
    </StackLayout>
    
</ContentPage>